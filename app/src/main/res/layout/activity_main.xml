<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <com.example.orientation_sensor_test.View.Level_Horizontal_View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/Horizontal_View"/>
            <com.example.orientation_sensor_test.View.Level_Vertical_View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/Vertical_View"/>
            <com.example.orientation_sensor_test.View.Round_Bar_View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/Bar_View"/>
            <com.example.orientation_sensor_test.View.DirectionView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/Direction_View"/>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/XYZ_tv"
                    android:gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:textSize="20dp"
                    android:text="0000" />
            </LinearLayout>
            <com.example.orientation_sensor_test.View.CompassView
                android:id="@+id/compass_pointer"
                android:layout_width="144dp"
                android:layout_height="150dp"
                 />
        </LinearLayout>
        <TextView
            android:id="@+id/warnmessage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:textSize="35dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/bar_layout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="9" />

                <TextView
                    android:id="@+id/progress_tv"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="0%" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>